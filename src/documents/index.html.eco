	<!-- Main hero unit for a primary marketing message or call to action -->
	<!-- <div class="splash-bg"> </div> -->
	<div class="header-bg"> </div>
	<div class="pure-g-r auto">
		<div class="splash pure-u-1">
			<div class="l-box splash-text">
				<%- @partial('logo-svg') %>
				<h1 class="splash-head">
					A modern web prototyping platform. 
				</h1>
				<br/>
				<h2 class="splash-subhead">
					Empower your website frontends with <a href="http://docpad.org/docs/meta-data">layouts</a>, <a href="http://docpad.org/docs/meta-data">meta-data</a>, pre-processors (markdown, jade, coffeescript, etc.), <a href="http://docpad.org/plugin/partials/">partials</a>, <a href="http://docpad.org/docs/skeletons">skeletons</a>, file watching, <a href="http://docpad.org/docs/api#using-the-database">querying</a>, and an amazing <a href="http://docpad.org/docs/plugins">plugin system</a>. DocPad will streamline your web development process allowing you to craft full-featured websites quicker than ever before.
				</h2>

				<p>
					<a href="http://learn.bevry.me/" class="pure-button primary-button">Get Started</a>
				</p>
			</div>
		</div>
		<!-- <div class="pure-u-1-2 splash-code"> </div> -->
	</div>

